<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aagjm.dare.RegisterActivity"
    android:animationCache="false"
    android:background="@drawable/bg_login_register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:background="@drawable/rounded_edittext"
        android:textColorLink="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="15dp"
        android:padding="7dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/etEmail"
        android:layout_alignLeft="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:textColorHint="@android:color/background_light"
        android:hint="@string/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmail"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/etUsername"
        android:layout_alignLeft="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_alignRight="@+id/etUsername"
        android:layout_alignEnd="@+id/etUsername"
        android:padding="7dp"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColorHint="@android:color/background_light"
        android:hint="@string/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="15dp"
        android:id="@+id/etPasswordConfirm"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:hint="@string/passwordconfirm"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textAlignment="center"
        android:padding="7dp"
        android:textSize="24sp" />

    <Button
        android:text="@string/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etRegister"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/etPasswordConfirm"
        android:layout_alignLeft="@+id/etPasswordConfirm"
        android:layout_alignStart="@+id/etPasswordConfirm"
        android:layout_alignRight="@+id/etPasswordConfirm"
        android:layout_alignEnd="@+id/etPasswordConfirm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsername"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/background_light"
        android:padding="7dp"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:hint="@string/username"
        android:textColorHint="@android:color/background_light"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/tvRegister"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Do yo DARE?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegister"
        android:layout_marginTop="53dp"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
